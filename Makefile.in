# $Id: Makefile.in,v 1.1 1998-05-08 15:15:02 ghudson Exp $

SHELL=/bin/sh
INSTALL=@INSTALL@
INSTALL_PROGRAM=@INSTALL_PROGRAM@
VPATH=@srcdir@
srcdir=@srcdir@
top_srcdir=@top_srcdir@
prefix=@prefix@
exec_prefix=@exec_prefix@
bindir=@bindir@
mandir=@mandir@

CC=@CC@
CPPFLAGS=@CPPFLAGS@
CFLAGS=@CFLAGS@
DEFS=@DEFS@
LDFLAGS=@LDFLAGS@
LIBS=@LIBS@
ALL_CFLAGS=${CPPFLAGS} ${CFLAGS} ${DEFS}

all: passwd

passwd: passwd.o
	${CC} ${LDFLAGS} -o $@ passwd.o -lal -lhesiod ${LIBS}

.c.o:
	${CC} -c ${ALL_CFLAGS} $<

check:

install:
	${top_srcdir}/mkinstalldirs ${DESTDIR}${bindir}
	${top_srcdir}/mkinstalldirs ${DESTDIR}${mandir}/man1
	${INSTALL_PROGRAM} -o root -m 4555 passwd ${DESTDIR}${bindir}
	${INSTALL} -m 444 ${srcdir}/passwd.1 ${DESTDIR}${mandir}/man1

clean:
	rm -f passwd.o passwd

distclean: clean
	rm -f config.cache config.log config.status Makefile
